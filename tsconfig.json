{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": "src",
        "outDir": "./dist",
        "rootDir": "./src",
        "paths": {
            "~/*": ["*"],
            "package": ["./package.json"]
        }
    },

    "include": ["src/**/*.ts", "src/**/*.tsx", "*.config.mjs", "*.config.js"],

    "exclude": ["node_modules"],
    "ts-node": {
        "esm": true
    }
}
